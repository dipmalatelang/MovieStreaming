<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_overlay</item>
        <item name="colorPrimaryDark">@color/color_text_black</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        
        <item name="background">@color/color_text_black</item>

        <item name="colorOnSecondary">@color/black_overlay</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">12sp</item>
        <item name="colorOnSurface">@color/black_overlay</item>


    </style>

    <style name="AppThemestyle" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">12sp</item>

    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/color_text_white</item>
        <item name="android:textColorHint">@color/color_text_grey</item>
        <item name="counterTextAppearance">@color/colorWhite</item>
        <item name="endIconTint">@color/colorWhite</item>
        <item name="tint">@color/colorWhite</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textColorHighlight">@color/color_text_grey</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#E3A592</item>
        <item name="android:progressTint">#C6C6C6</item>
        <item name="android:colorControlActivated">#9E9D9D</item>
        <item name="thumbColor">#A6A6A6</item>
        <item name="thumbTint">#D5D3D3</item>
    </style>
    <style name="text_view_style" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:background">@drawable/ripple_transparent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textColorHint">@color/color_text_white</item>
        <item name="colorControlNormal">@color/color_text_white</item>
        <item name="colorControlActivated">@color/color_text_white</item>
        <item name="colorControlHighlight">@color/color_text_white</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#F44336</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
